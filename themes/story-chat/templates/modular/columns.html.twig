<section class="section modular-columns {{ page.header.class}}">
    <section class="container grid-lg">
        <div class="columns">
            {% set col_width = 12 / page.header.columns|length %}
            {% for column in page.header.columns %}
                <div class="column col-{{ col_width }} col-md-12">
                    {{ column.content|markdown }}
                </div>
            {% endfor %}
        </div>
    </section>
</section>